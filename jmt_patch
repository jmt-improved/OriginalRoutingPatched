+	@Override
+	public void setIsPinned(Object stationKey, boolean value) {
+		StationData sd;
+		if (stationDataHM.containsKey(stationKey)) {
+			sd = (StationData) stationDataHM.get(stationKey);
+		} else {
+			return;
+		}
+
+		sd.pinned = value;
+	}
