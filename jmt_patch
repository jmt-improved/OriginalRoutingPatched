+	@Override
+	public boolean isPinned(Object stationKey) {
+		StationData sd;
+		if (stationDataHM.containsKey(stationKey)) {
+			sd = (StationData) stationDataHM.get(stationKey);
+		} else {
+			return false;
+		}
+
+		return sd.pinned;
+	}
